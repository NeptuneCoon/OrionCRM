@model Orion.CRM.WebApp.Models.Customer.CustomerServiceRecord
@{
    ViewData["Title"] = "RecordDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default span10">
    <div class="panel-heading">
        <h3 class="panel-title">服务记录</h3>
    </div>

    <div class="panel-body">
        @*<form class="form-horizontal" enctype="multipart/form-data" action="/Customer/AddServiceRecordHandler" method="post">*@
            <div style="background-color:#f5f5f5;padding:10px;width:680px">
                <div style="background-color:#fff;padding:10px">

                    <table class="table table-bordered">
                        <tr>
                            <td>客户姓名</td>
                            <td>@Model.CustomerRealName</td>
                        </tr>
                        <tr>
                            <td>服务时间</td>
                            <td>@Model.CreateTime.ToString("yyyy-MM-dd HH:mm")</td>
                        </tr>
                        <tr>
                            <td>服务内容</td>
                            <td>@Model.ServiceContent)</td>
                        </tr>
                        <tr>
                            <td>图片</td>
                            <td>
                                <ul style="list-style:none;padding-left:0px;">
                                    @if (!string.IsNullOrEmpty(Model.Images))
                                    {
                                        string[] pathArr = Model.Images.Split(new char[] { ',' }, StringSplitOptions.RemoveEmptyEntries);
                                        foreach (var path in pathArr)
                                        {
                                            <li style="padding:0;padding-left:0px;">
                                                <img src="@path" style="width:500px" />
                                            </li>
                                        }
                                    }
                                </ul>
                            </td>
                        </tr>
                        <tr>
                            <td>创建人</td>
                            <td>@Model.AppendUserRealName</td>
                        </tr>
                    </table>

                    
                    <div class="control-group">
                        <div class="controls" id="result">
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <a href="/Customer/Detail/@Model.CustomerId" class="btn">返回客户页</a>
                </div>
            </div>
        @*</form>*@
    </div>
</div>

