<div class="navbar" style="margin-bottom:5px">
    <div class="navbar-inner">
        <ul class="breadcrumb">

            <li>
                <a href="#">资源管理</a> <span class="divider">/</span>
            </li>
            <li class="active">资源列表</li>
        </ul>
    </div>
</div>

<div class="row-fluid">
    <!-- block -->
    <div class="block">
        <div class="navbar navbar-inner block-header">
            <div class="muted pull-left">客户录入</div>
        </div>
        <div class="block-content collapse in">
            <div class="span12">
                <form class="form-horizontal">
                    <div class="control-group">
                        <label class="control-label">客户姓名<span class="required">*</span></label>
                        <div class="controls">
                            <input type="text" class="span6" asp-for="@Model.CustomerName" placeholder="姓名" />
                            <p class="help-block">请输入客户的姓名，如不明确请填写"未知"</p>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">留言项目<span class="required">*</span></label>
                        <div class="controls">
                            <select class="span6 m-wrap" name="category">
                                <option value="">请选择...</option>
                                <option value="Category 1">Category 1</option>
                                <option value="Category 2">Category 2</option>
                                <option value="Category 3">Category 5</option>
                                <option value="Category 4">Category 4</option>
                            </select>
                            <p class="help-block">请选择用户感兴趣的项目</p>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">手机号码</label>
                        <div class="controls">
                            <input type="text" class="span6" asp-for="@Model.Mobile" placeholder="手机号码" />
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">微信</label>
                        <div class="controls">
                            <input type="text" class="span6" asp-for="@Model.Wechat" placeholder="微信" />
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">QQ</label>
                        <div class="controls">
                            <input type="text" class="span6" asp-for="@Model.QQ" placeholder="QQ" />
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Email</label>
                        <div class="controls">
                            <input type="text" class="span6" asp-for="@Model.Email" placeholder="Email" />
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">地址</label>
                        <div class="controls">
                            <input type="text" class="span6" asp-for="@Model.Address" placeholder="客户联系地址" />
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">来源</label>
                        <div class="controls">
                            <select class="span6 m-wrap" name="category">
                                <option value="">请选择...</option>
                                <option value="Category 1">Category 1</option>
                                <option value="Category 2">Category 2</option>
                                <option value="Category 3">Category 5</option>
                                <option value="Category 4">Category 4</option>
                            </select>
                            <p class="help-block">请选择资源的来源</p>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">初步意向</label>
                        <div class="controls">
                            <select class="span6 m-wrap" name="category">
                                <option value="">请选择...</option>
                                <option value="Category 1">Category 1</option>
                                <option value="Category 2">Category 2</option>
                                <option value="Category 3">Category 5</option>
                                <option value="Category 4">Category 4</option>
                            </select>
                            <p class="help-block">如不明确，可不填写</p>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">备注</label>
                        <div class="controls">
                            <textarea style="margin: 0px; width: 355px; height: 50px;" asp-for="@Model.Remark"></textarea>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">留言内容</label>
                        <div class="controls">
                            <textarea style="margin: 0px; width: 474px; height: 63px;" asp-for="@Model.Message" ></textarea>
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">保&nbsp;&nbsp;存</button>
                        <button type="reset" class="btn">返回</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
    <!-- /block -->
</div>

@section scripts{
    <script type="text/javascript">
        

    </script>

}
