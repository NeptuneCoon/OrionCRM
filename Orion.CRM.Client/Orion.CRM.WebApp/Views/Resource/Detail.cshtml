<body>
    <div class="container">
        @if (TempData["result"] != null) {
            if ((bool)TempData["result"]) {
                <!--操作成功通知-->
                <div class="self-alert">保存成功！</div>
            }
            else {
                <!--操作失败通知-->
                <div class="self-alert">抱歉，保存失败，请重试！</div>
            }
