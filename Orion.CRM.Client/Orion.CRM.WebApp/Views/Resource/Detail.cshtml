                        <th style="width:60px;text-align:left">状态</th>
                        <th style="text-align:left">操作</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Reminders != null && Model.Reminders.Count > 0) {
                        foreach (var reminder in Model.Reminders) {
                            <tr>
                                <td @(reminder.Closed==1?"style=text-decoration:line-through":"")>
                                    @reminder.MsgText
                                </td>
                                <td @(reminder.Closed==1?"style=text-decoration:line-through":"")>
                                    @reminder.RemindTime.ToString("yyyy-MM-dd HH:mm")
                                    @if(!string.IsNullOrEmpty(reminder.DisplayTime)) {
                                        @:<span style="font-style:italic;color:forestgreen">(@reminder.DisplayTime)</span>
                                    }
                                </td>
                                <td @(reminder.Closed == 1 ? "style=text-decoration:line-through" : "")>
                                    @if (reminder.Closed == 1) {
                                        <span>已关闭</span>
                                    }
                                    else if(reminder.RemindTime < DateTime.Now) {
                                        <span>已过期</span>
                                    }
                                    else {
                                        <span style="color:green">正常</span>
                                    }
                                </td>
