    <script type="text/javascript">
        var regMobile = /^1[3,4,5,7,8]\d{9}$/;
        var regNum = /^\d+$/;//数字
        var regWechat = /^[a-zA-Z\d_-]{3,}$/;
        var regDate = /^[0-9]{4}-((([13578]|(10|12))-([1-9]|[1-2][0-9]|3[0-1]))|(2-([1-9]|[1-2][0-9]))|(([469]|11)-([1-9]|[1-2][0-9]|30)))$/;
        /*
        * 保存客户
        */
        function customerSave() {
            var result = checkCustomer();
            if (result) {
                var status = $('#oldStatus').val();
                if (status == "1" || status == "2") {
                    alert('抱歉！该资源目前不属于你，你需要先将它划分给自己，然后刷新页面才能继续操作！');
                }
                else {
                    window.document.forms[0].submit();
                }
            }
            else {
                console.info('form validate fail.');
            }
        }
        function checkCustomer() {
            var res = true;
            var customerName = $('#CustomerName').val();
            if (!customerName) {
                res = false;
                alert('客户姓名不能为空！');
                $('#CustomerName').focus();
            }
            else {
                var mobile = $('#Mobile');
                var wechat = $('#Wechat');
                var qq = $('#QQ');
                if (!inputCheck(mobile)) {
                    alert('手机号码格式有误！');
                    mobile.focus();
                    res = false;
                }
                if (!inputCheck(wechat)) {
                    alert('微信号码格式有误！');
                    wechat.focus();
                    res = false;
                }
                if (!inputCheck(qq)) {
                    alert('QQ号码格式有误！');
                    qq.focus();
                    res = false;
                }
            }
            return res;
        }
        function checkReminder() {
            var res = true;
            var msgText = $('#msgText').val();
            var remindDate = $('#remindDate').val();
            var remindHour = $('#remindHour').val();
            var remindMinute = $('#remindMinute').val();

            if (!msgText) {
                res = false;
                alert('请输入提醒内容！');
                $('#msgText').focus();
            }
            else if (!remindDate) {
                res = false;
                alert('请选择提醒日期！');
                setTimeout(function () {
                    $('#remindDate').focus();
                }, 200);
            }
            else if (!inputCheck($('#remindDate'))) {
                res = false;
                alert('日期格式不正确！');
                $('#remindDate').focus();
            }
            else if (!remindHour) {
                res = false;
                alert('请选择几点钟！');
                $('#remindHour').focus();
            }
            else {
                var now_time = new Date();
                var remind_time_str = remindDate + " " + remindHour + ":" + remindMinute + ":00";
                var remind_time = new Date(remind_time_str.replace(/-/g, "\/"));
                if (now_time >= remind_time) {
                    res = false;
                    alert('无效的日期！');
                    $('#remindHour').focus();
                }
            }

            return res;
        }

        //function compareDate(d1, d2) {
        //    return ((new Date(d1.replace(/-/g, "\/"))) > (new Date(d2.replace(/-/g, "\/"))));
        //}

        /*
        * 洽谈方式下拉框切换事件
        * 如果洽谈方式是"面谈"，则展示谈单人，否则隐藏谈单人
        */
        function talkWayChange() {
            var talkWay = $('#talkWay').find("option:selected").val();
            if (talkWay == "3") {
                $('#facetalkTd').show();
            }
            else {
                $('#facetalkTd').hide();
            }
        }

        /*
        * 添加洽谈记录
        */
        function addTalkRecord() {
            var resourceId = $('#ResourceId').val();
            var talkWay = $('#talkWay').find("option:selected").val();
            var talkResult = $('#talkResult').val();
            var faceTalkUser = $('#faceTalkUser').find("option:selected").val();
            if (talkWay != "3") {
                faceTalkUser = ""; // 洽谈方式不是"面谈"将谈单人id置为空，以使后台自动填充当前登录用户id
            }
            if (!talkResult) {
                alert('洽谈小结不能为空，请填写。');
                $('#talkResult').focus();
            }
            else if (talkWay == "3" && !faceTalkUser) {
                alert('请选择谈单人！');
                $('#faceTalkUser').focus();
            }
            else {
                var status = $('#oldStatus').val();
                // 检测状态是否是公共库、垃圾库、未分配及已签约
                if (status == "1" || status == "2") {
                    alert('抱歉！该资源目前不属于你，你需要先将它划分给自己，然后刷新页面才能继续操作！');
                }
                else {
                    $.post("/Resource/AddTalkRecord", { "resourceId": resourceId, "talkWay": talkWay, "talkResult": talkResult,"userId": faceTalkUser }, function (data) {
                        if (data) {
                            window.location.reload();
                        }
                        else {
                            alert('抱歉，添加失败！');
                        }
                    });
                }
            }
        }
        /*
        * 删除洽谈记录
        */
        function delTalkRecord(id, e) {
            if ($(e).attr("disabled") == "disabled") return;
            $(e).attr("disabled", "disabled");
            var resourceId = $('#ResourceId').val();
            $.get("/Resource/DelTalkRecord", { "id": id, "resourceId": resourceId }, function (result) {
                if (result) {
                    window.location.reload();
                }
                else {
                    alert('抱歉，删除失败！');
                    $(e).removeAttr("disabled");
                }
            });
        }
        /*
        * 添加提醒 
        */
        function addReminder() {
            var res = checkReminder();
            if (res) {
                var resourceId = $('#ResourceId').val();
                var msgText = $('#msgText').val();
                var remindDate = $('#remindDate').val();
                var remindHour = $('#remindHour').val();
                var remindMinute = $('#remindMinute').val();

                var reminder = {};
                reminder.MsgText = msgText;
                reminder.RemindTime = remindDate + " " + remindHour + ":" + remindMinute + ":00";
                reminder.Type = 0;// type=0表示提醒类型是资源
                reminder.ObjectId = resourceId;
                $.post("/Reminder/InsertReminder", reminder, function (result) {
                    if (result) {
                        window.location.reload();
                    }
                    else {
                        alert('抱歉，添加失败！');
                    }
                });
            }
        }
        /*
         * 关闭提醒
        */
        function closeReminder(id) {
            $.get("/Reminder/CloseReminder?id=" +id, null, function (result) {
                if (result) {
                    window.location.reload();
                }
                else {
                    alert('抱歉，操作失败！');
                }
            });
        }
        /*
         * 删除提醒
        */
        function delReminder(id) {
            $.get("/Reminder/DeleteReminder?id=" + id, null, function (result) {
                if (result) {
                    window.location.reload();
                }
                else {
                    alert('抱歉，操作失败！');
                }
            });
        }

        /*
        * 通用文本框内容验证方法：使用正则表达式进行文本框输入内容的验证
        * input 文本框对象
        */
        function inputCheck(input) {
            var result = true;
            // validate
            if (input.length > 0) {
                var reg = eval(input.attr("reg"));
                if (reg) {
                    // 验证
                    var required = input.attr("is-null");
                    var val = $(input).val();

                    if (required == "required") {
                        if (!val) {
                            result = false;
                        }
                        else {
                            if (!reg.test(val)) {
                                result = false;
                            }
                        }
                    }
                    else {
                        if (val && !reg.test(val)) {
                            result = false;
                        }
                    }
                }
            }

            return result;
        }
