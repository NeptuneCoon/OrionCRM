@model List<Orion.CRM.WebApp.Models.Source.ResourceSource>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <style type="text/css">
        .panel-input {
            border: 1px solid #e1e2e2;
            border-radius: 0 !important;
            background-color: #f7f7f7;
            color: #666;
            font-size: 12px;
            width: 250px;
            padding: 5px 5px;
            outline: none;
        }

        .modal {
            background: none repeat scroll 0 0 #fff;
            /*border: 1px solid #808080;*/
            box-shadow: 0 0 1em #666;
            left: 50%;
            position: fixed;
            top: 40%;
            z-index: 1000;
            border-radius: 0;
        }

        .modal a.modal-close {
            position: absolute;
            right: 15px;
            top: 10px;
            color: #3babd0;
            font-size: 20px;
        }

        .modal a.modal-close:hover {
            text-decoration: none;
            color: #000;
        }

        .modal .modal-header {
            min-height: 90px;
        }

        .modal .modal-contents {
            padding: 0px 15px 25px 15px;
        }

        .modal h2 {
            font-size: 1em;
            font-weight: bold;
            color: #000;
            line-height: 1.2em;
        }

        .modal-cover {
            background: none repeat scroll 0 0 #fff;
            height: 100%;
            top: 0;
            opacity: 0.4;
            position: fixed;
            width: 100%;
            z-index: 20;
        }

        @@media only screen and (max-width:480px) {
            .modal {
                visibility: hidden;
            }
        }

        .modal-webpi {
            width: auto;
            /*width:580px;*/
            /*margin-left:-350px;
            margin-top:-108px;*/
            margin: auto;
        }

        .modal-webpi p {
            border: 1px solid #e1e2e2;
            margin: 15px 0;
            padding: 15px;
            font-size: 15px;
            line-height: 1.4em;
        }

        .modal-webpi .btn-install {
            margin-left: 10px;
        }

    </style>
}

<div class="panel panel-default" style="width:700px">
    <div class="panel-heading">
        <h3 class="panel-title">资源来源</h3>
    </div>
    <div class="panel-body">
        <div class="form-group">
            <a href="javascript:;" onclick="showEditPanel()" class="btn btn-default">
                Add New <i class="icon-plus"></i>
            </a>
        </div>

        <table class="table table-bordered" style="margin-top:10px">
            <thead>
                <tr>
                    <th>序号</th>
                    <th>资源来源</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0) {
                    for (int i = 0; i < Model.Count; i++) {
                        var item = Model[i];
                        <tr>
                            <td>@(i+1)</td>
                            <td>@item.SourceName</td>
                            <td>
                                <a href="javascript:;" onclick="showEditPanel(@item.Id)">编辑</a>
                                <a href="javascript:;" onclick="showDeletePanel(@item.Id)">删除</a>
                            </td>
                        </tr>
                    }
                }
                else {
                    <tr>
                        <td colspan="3" style="text-align:center">没有数据</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



<!--create/edit panel-->
<div class="modal modal-webpi" style="display: none;" id="panelEdit">
    <a href="javascript:;" class="modal-close" data-s-object-id="webpi (close)" onclick="modalClose(this)">✖</a>
    <div class="modal-contents">
        <h2>添加-资源来源</h2>
        <div style="border:1px solid #e1e2e2;padding:15px;">
            <div class="form-inline">
                <input type="text" placeholder="请输入来源名称" class="panel-input" id="sourceName" />
                <input type="hidden" id="sourceIdHidden" />
                <input type="button" value="保存" class="btn btn-default" style="border-radius:0 !important;padding:4px 8px" onclick="saveChange()" />
            </div>
            <div id="divLoginTips" style="padding:3px;display:none"></div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        function showEditPanel(id) {
            var panel = $('#panelEdit');
            if (id) {
                panel.find(".modal-contents>h2").html('编辑-资源来源');
                $('#sourceIdHidden').val(id);
            }
            else {
                panel.find(".modal-contents>h2").html('添加-资源来源');
                $('#sourceIdHidden').val('');
            }

            modalShow(panel);
            $('#sourceName').focus();
        }
        function saveChange() {
            var id = $('#sourceIdHidden').val();
            if (id) {
                // 修改
            }
            else {
                // 新增
                var sourceName = $('#sourceName').val();
                var entity = { "SourceName": sourceName };
                $.post("/Source/Insert", entity, function (result) {
                    if (result) {
                        swal(
                            '添加成功！',
                            '',
                            'success'
                        )
                    }
                    else {
                        swal(
                            '添加失败！',
                            '',
                            'error'
                        )
                    }
                });
            }
        }

        function deleteSource(){
            swal({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                type: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then(function () {
                swal(
                    'Deleted!',
                    'Your file has been deleted.',
                    'success'
                )
            });
        }
    </script>
}





