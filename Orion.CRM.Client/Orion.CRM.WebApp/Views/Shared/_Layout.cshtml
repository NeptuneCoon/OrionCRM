        /*
        * 通用文本框内容验证方法：使用正则表达式进行文本框输入内容的验证
        * @@param input 文本框对象
        */
        function inputCheck(input) {
            if (input.length > 0) { //可能不存在，有些项是可选的，可通过后台配置
                var reg = eval(input.attr("reg"));
                var required = input.attr("required");
                var val = $(input).val() || $(input).find("option:selected").val();
                if (required =="required" && (val == "" || val == undefined) || !reg.test(val)) {
                    // fail
                    //showErrorTips(input);//显示错误信息
                    input.focus();
                }
                else {
                    // pass
                    //hideErrorTips(input);//隐藏错误信息
                }
            }
        }
    </script>
