        /* 通用正则表达式 */
        var regChinese = /^[\u4e00-\u9fa5A-Za-z]*$/;//中文
        var regDate = /(?!0000)[0-9]{4}\/(([1-9]|0[1-9]|1[0-2])\/([1-9]|0[1-9]|1[0-9]|2[0-8])|([13-9]|0[13-9]|1[0-2])\/(29|30)|([13578]|0[13578]|1[02])\/31)/;
        var regEmail = /^[a-zA-Z0-9_-]+@@[a-zA-Z0-9_-]+(\.[a-zA-Z0-9_-]+)+$/;
        var regIDCard = /^[1-9]\d{5}[1-9]\d{3}((0\d)|(1[0-2]))(([0|1|2]\d)|3[0-1])\d{3}([0-9]|X)$/;
        var regWechat = /^[a-zA-Z\d_-]{5,}$/;
        var regZip = /[1-9]\d{5}(?!\d)/; //邮编正则
        var regString = /^.+$/;
        var regMobile = /^1[3,4,5,7,8]\d{9}$/;
        var regEmail = /^(?!^[\.|_|-])[A-Za-z0-9\u4e00-\u9fa5._-]*[^\.|_|@@|-]@@[A-Za-z0-9\u4e00-\u9fa5\_-]*[^\.|_|-]((\.[A-Za-z]+){1,2}|(\.[\u4e00-\u9fa5]+){1,2})$/;
        var regAddress = /^.{2,50}$/;
        var regNum = /^\d+$/;//数字

        /*
        * 通用文本框内容验证方法：使用正则表达式进行文本框输入内容的验证
        * @@param input 文本框对象
        */
        function inputCheck(input) {
            var result = true;
            if (input.length > 0) {
                var reg = eval(input.attr("reg"));
                var _val = $(input).val() || $(input).find("option:selected").val();
                if (_val == "" || _val == undefined || !reg.test(_val)) {
                    // fail
                    result = false;
                    console.info(input.attr("id"));
                    showErrorTips('请输入符合格式要求的内容');
                    input.focus();
                }
                else {
                    // pass
                    // 隐藏错误信息
                    hideErrorTips();
                }
            }
            return result;
        }

        function showErrorTips(msg) {
            $(".alert>span").html(msg);
            $(".alert").show();
        }
        function hideErrorTips() {
            $(".alert").hide();
        }
    </script>
